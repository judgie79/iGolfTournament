@model CourseHoleCreateViewModel

@{
    ViewBag.Title = "Create";

    var frontColCount = Model.CourseHoles.Front.Count();
    var backColCount = Model.CourseHoles.Back.Count();
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Hole</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Club.Id)
        @Html.HiddenFor(model => model.Course.Id)
        @Html.HiddenFor(model => model.Teebox.Id)

        <table class="table table-condensed">
            <colgroup>
                <col width="130">
                @for (int i = 0; i < frontColCount; i++)
                {
                    <col width="60" />
                }
            </colgroup>
            <thead>
                <tr>
                    <th colspan="@(Model.CourseHoles.Front.Count +1)">Front</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayNameFor(model => Model.ViewModel.Id)</td>
                    @for (var i = 0; i < Model.CourseHoles.Front.Count; i++)
                    {
                        <td>
                            @Html.HiddenFor(model => Model.CourseHoles.Front[i].FrontOrBack)
                            @Html.DropDownListFor(model => Model.CourseHoles.Front[i].HoleId, Model.Holes.Select(hole => new SelectListItem() { Text = hole.Name, Value = hole.Id }), new { @class = "form-control" })
                        </td>
                    }
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => Model.ViewModel.Number)</td>
                    @for (var i = 0; i < Model.CourseHoles.Front.Count; i++)
                    {
                        <td>@Html.TextBoxFor(model => Model.CourseHoles.Front[i].Number, new { @class = "form-control" })</td>
                    }
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => Model.ViewModel.Par)</td>
                    @for (var i = 0; i < Model.CourseHoles.Front.Count; i++)
                    {
                        <td>@Html.TextBoxFor(model => Model.CourseHoles.Front[i].Par, new { @class = "form-control" })</td>
                    }
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => Model.ViewModel.Hcp)</td>
                    @for (var i = 0; i < Model.CourseHoles.Front.Count; i++)
                    {
                        <td>@Html.TextBoxFor(model => Model.CourseHoles.Front[i].Hcp, new { @class = "form-control" })</td>
                    }
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => Model.ViewModel.Distance)</td>
                    @for (var i = 0; i < Model.CourseHoles.Front.Count; i++)
                    {
                        <td>@Html.TextBoxFor(model => Model.CourseHoles.Front[i].Distance, new { @class = "form-control" })</td>
                    }
                </tr>
            </tbody>
        </table>

        <table class="table table-condensed">
            <colgroup>
                <col width="130">
                @for (int i = 0; i < backColCount; i++)
                {
                    <col width="60" />
                }
            </colgroup>
            <thead>
                <tr>
                    <th colspan="@(Model.CourseHoles.Back.Count +1)">Back</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayNameFor(model => Model.ViewModel.HoleId)</td>
                    @for (var i = 0; i < Model.CourseHoles.Back.Count; i++)
                    {
                        <td>
                            @Html.HiddenFor(model => Model.CourseHoles.Back[i].FrontOrBack)
                            @Html.DropDownListFor(model => Model.CourseHoles.Back[i].HoleId, Model.Holes.Select(hole => new SelectListItem() { Text = hole.Name, Value = hole.Id }), new { @class = "form-control" })
                        </td>
                    }
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => Model.ViewModel.Number)</td>
                    @for (var i = 0; i < Model.CourseHoles.Back.Count; i++)
                    {
                        <td>@Html.TextBoxFor(model => Model.CourseHoles.Back[i].Number, new { @class = "form-control" })</td>
                    }
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => Model.ViewModel.Par)</td>
                    @for (var i = 0; i < Model.CourseHoles.Back.Count; i++)
                    {
                        <td>@Html.TextBoxFor(model => Model.CourseHoles.Back[i].Par, new { @class = "form-control" })</td>
                    }
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => Model.ViewModel.Hcp)</td>
                    @for (var i = 0; i < Model.CourseHoles.Back.Count; i++)
                    {
                        <td>@Html.TextBoxFor(model => Model.CourseHoles.Back[i].Hcp, new { @class = "form-control" })</td>
                    }
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => Model.ViewModel.Distance)</td>
                    @for (var i = 0; i < Model.CourseHoles.Back.Count; i++)
                    {
                        <td>@Html.TextBoxFor(model => Model.CourseHoles.Back[i].Distance, new { @class = "form-control" })</td>
                    }
                </tr>
            </tbody>
        </table>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
