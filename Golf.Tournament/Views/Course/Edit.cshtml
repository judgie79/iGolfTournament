@model Golf.Tournament.ViewModels.CourseEditViewModel

<h1>Edit Course @Model.Course.Name</h1>
@if (Model.Club != null)
{
    <h2>@Model.Club.Name</h2>
}


<hr />
@if (Model.Club != null)
{
    <div>
        @Html.ActionLink(Model.Club.Name, "Details", "Club", new { id = Model.Club.Id }, new { @class = "btn btn-default" })
    </div>
}

<div class="row">
    @if (Model.Club != null)
    {
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            @Html.DisplayFor(model => model.Club)
            <hr />
            @Html.DisplayFor(model => model.Club.Address)
        </div>
    }
    <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Edit Course @Model.Course.Name</h2>
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Club.Id)

                        @Html.EditorFor(model => model.Course)
                    </div>
                </div>
                <div class="panel-footer">
                    @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-sm btn-default" })
                    <input type="submit" value="Save" class="btn btn-sm btn-primary" />
                </div>
            </div>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Teeboxes - Course @Model.Course.Name</h2>
            </div>
            <div class="panel-body">
                @Html.DisplayFor(model => model.Course.TeeBoxes, new { editEnabled = true })
            </div>
            <div class="panel-footer">
                @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-sm btn-default" })
            </div>
        </div>
    </div>
</div>
