@model Golf.Tournament.ViewModels.CourseEditViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Course</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Club.Id)
        @Html.HiddenFor(model => model.Course.Id)

        @Html.DisplayFor(model => model.Club.Name)


        <div class="form-group">
            @Html.LabelFor(model => model.Course.Name, htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Course.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Course.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <h2>Teeboxes</h2>

        <p>
            @Html.ActionLink("Create New", "Create", "Teebox", new { clubId = Model.Course.ClubId, courseId = Model.Course.Id }, new { @class = "btn btn-default" })
        </p>
        <div class="row">
            @Html.EditorFor(model => model.Course.TeeBoxes)
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-sm-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
