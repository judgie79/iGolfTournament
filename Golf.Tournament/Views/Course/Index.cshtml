@model CourseListViewModel

@{
    ViewBag.Title = "Index";

    ViewBag.editEnabled = true;
}

<h1>Courses</h1>
<h2>@Model.Club.Name</h2>

<hr />
<p>
    @Html.ActionLink(Model.Club.Name, "Details", "Club", new { id = Model.Club.Id }, new { @class = "btn btn-default" })
    @Html.ActionLink("Create New Course", "Create", "Course", new { clubId = Model.Club.Id }, new { @class = "btn btn-primary" })
</p>

<div class="container">
    @Html.DisplayFor(model => model.Courses, new { editEnabled = true })
</div>