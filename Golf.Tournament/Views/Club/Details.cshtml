@model Golf.Tournament.ViewModels.ClubDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1 class="panel-title">@Html.DisplayFor(model => model.Club.Name)</h1>
        </div>
        <div class="panel-body">
            <div id="map-outer" class="col-sm-12">
                <div id="address" class="col-sm-4">
                    @Html.DisplayFor(model => model.Club.Address)
                </div>
                <div class="col-sm-8" style="height: 200px">
                    @Html.Partial("Map", new Golf.Tournament.ViewModels.MapViewModel(Model.Club.Address))
                </div>
            </div><!-- /map-outer -->
        </div>

        <div class="panel-footer">
            @Html.ActionLink("Edit", "Edit", new { id = Model.Club.Id }, new { @class = "btn btn-sm btn-default" })
            @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-sm btn-default" })
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">Courses</h4>
        </div>
        <div class="panel-body">
            @Html.Partial("CourseListPart", Model.Courses)
        </div>
        <div class="panel-footer">@Html.ActionLink("Create New", "Create", "Course", new { clubId = Model.Club.Id }, new { @class = "btn btn-sm btn-default" })</div>
    </div>

</div>