@model Golf.Tournament.ViewModels.TeamListViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @(Html.DisplayNameFor(model => model.ViewModel.Name))
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ViewModel.Hcp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ViewModel.Teetime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Tournament.Teams)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hcp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teetime)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id, tournamentId = Model.Tournament.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id, tournamentId = Model.Tournament.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id, tournamentId = Model.Tournament.Id })
            </td>
        </tr>
    }

</table>
