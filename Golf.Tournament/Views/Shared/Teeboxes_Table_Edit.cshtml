@using Golf.Tournament.Utility
@model IEnumerable<Golf.Tournament.Models.TeeBox>
<table class="table table-hover table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Distance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Par)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseRating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SlopeRating)
        </th>
        <th></th>
    </tr>

    @for (int i = 0; i < Model.Count(); i++)
    {
        var item = Model.ElementAt(i);
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <span class="label label-default" style="background-color: @item.Color.ToHtml(); display: block; width: 20px; height: 10px;">&nbsp;</span>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Par)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SlopeRating)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Teebox", new { clubId = ViewBag.Club.Id, courseId = ViewBag.Course.Id, id = item.Id }, new { @class = "btn btn-xs btn-default" })
                <button type="button" class="btn btn-default btn-xs" data-toggle="modal" data-target="#myModal_@item.Id">Show Holes</button>
                @Html.ActionLink("Delete", "Delete", "Teebox", new { clubId = ViewBag.Club.Id, courseId = ViewBag.Course.Id, id = item.Id }, new { @class = "btn btn-xs btn-danger" })
            </td>
        </tr>
        using (Html.BeginContent("bottom"))
        {
            @Html.Partial("Holes_Table_Popup", @item)
        }
    }
</table>

