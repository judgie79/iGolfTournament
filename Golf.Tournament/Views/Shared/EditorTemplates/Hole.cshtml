@model Golf.Tournament.Models.Hole

<div class="form-group">
    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-lg-2 col-md-4 col-sm-8 col-xs-12" })
    <div class="col-sm-10">
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-lg-3 col-md-4 col-sm-8 col-xs-12" } })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.CourseImage, htmlAttributes: new { @class = "control-label col-lg-2 col-md-4 col-sm-8 col-xs-12" })
    <div class="col-sm-10">
        @Html.HiddenFor(model => model.CourseImage)
        @Html.FileUploadFor(model => model.CourseImageFile, new { @class = "form-control col-lg-3 col-md-4 col-sm-8 col-xs-12" })
    </div>
</div>