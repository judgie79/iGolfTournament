@using Golf.Tournament.Utility
@model object

@{
    string classStr = "input-block-level";

    if (ViewBag.htmlAttributes!= null)
    {
        classStr += " " + ViewBag.htmlAttributes.@class;
    }

    if (ViewBag.ClearTextField == true)
    {
        classStr += " clear-text-field";
    }

    if (ViewBag.Html == true)
    {
        classStr += " html";
    }

    var tClass = new
    {
        @class = classStr
    };
}

<div class="form-group@(Html.ValidationErrorFor(m => m, " has-error"))">
    @Html.LabelFor(m => m, new { @class = "control-label" })
    <div class="controls">
        @Html.TextAreaFor(
            m => m,
            8, 8,
            tClass)
        @Html.ValidationMessageFor(m => m, null,  new { @class = "help-block" })
    </div>
</div>
