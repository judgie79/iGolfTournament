@model Golf.Tournament.ViewModels.TournamentParticipantDeleteViewModel

@{
    ViewBag.Title = "Delete";
}


<div class="panel panel-danger">
    <div class="panel-heading">
        <h2 class="panel-title">Are you sure you want to remove the player from the tournament?</h2>
    </div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Participant.TeeboxId)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Participant.TeeboxId)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Participant.Teetime)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Participant.Teetime)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Participant.Player.Lastname)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Participant.Player.Lastname)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Participant.Player.Firstname)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Participant.Player.Firstname)
            </dd>

        </dl>


    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-sm-3">
                @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-sm btn-default" })
            </div>
            <div class="col-sm-9">
                <div class="pull-right">
                    @using (Html.BeginForm())
            {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            @Html.HiddenFor(model => model.Tournament.Id)
                            @Html.HiddenFor(model => model.Participant.Id)
                            <input type="submit" value="Delete" class="btn btn-danger" />

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
