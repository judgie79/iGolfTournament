@model IEnumerable<Golf.Tournament.Models.Player>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lastname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hcp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomeClub.Name)
            </th>
            <th class="sorter-false filter-false"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Firstname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lastname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hcp)
                    @if (item.IsOfficialHcp)
                {
                        <span class="glyphicon-check glyphicon" title="official"></span>
                    }
                    else
                    {
                        <span class="glyphicon-remove glyphicon" title="unofficial"></span>
                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HomeClub.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-xs btn-default" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-xs btn-default" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-xs btn-danger" })
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lastname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hcp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomeClub.Name)
            </th>
            <th>@Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-sm btn-default" })</th>
        </tr>
    </tfoot>
</table>
